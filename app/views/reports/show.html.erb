<% breadcrumb(:report, @report) %>

<div class="row">
  <div class="col-md-6">
    <h1><%= @report.property_name %></h1>
  </div>
  <div class="col-md-6 text-right">
    <%= link_to('<span class="glyphicon glyphicon-file" aria-hidden="true"></span> Download PDF'.html_safe, download_report_path(@report), :class => "btn btn-default btn-lg") %>
    <%= link_to('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'.html_safe, edit_report_path(@report), :class => "btn btn-default btn-lg") %><br>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th style="width: 1%">Image</th>
      <th>Caption</th>
    </tr>
  </thead>
  <tbody>
    <% @report.photos.each do |photo| %>
      <tr>
        <td><%= attachment_image_tag(photo, :image, :limit, 200, 200) %></td>
        <td><%= photo.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row text-right">
  <div class="col-sm-12">
    <%= link_to('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>Delete'.html_safe, report_path(@report), :method => :delete, :data => { :confirm => "Are you sure you want to delete the #{@report.display_name} monitoring report?" }, :class => "text-danger") %>
  </div>
</div>
